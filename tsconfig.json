{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "resolveJsonModule": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"] 
}
